#!/bin/bash

# Navigate to the Next.js app directory
cd "$(dirname "$0")/../frontend/nextjs-app"

# Install dependencies
echo "Installing dependencies..."
npm install

# Build the Next.js application
echo "Building Next.js application..."
npm run build

# Create a production-ready zip file
echo "Creating production zip file..."
mkdir -p ../output
zip -r ../output/frontend.zip .next package.json next.config.js public .env

echo "Build completed successfully! Output saved to frontend/output/frontend.zip"
